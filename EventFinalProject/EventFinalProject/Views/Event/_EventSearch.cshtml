
@model IEnumerable<EventFinalProject.Models.Event>

<div>
        <table id="searchTable" width="1200">
            <thead>
                <tr>
                    <th>Event Title</th>
                    <th>Start Date & Time</th>
                    <th>City</th>
                    <th>State</th>
                </tr>
            </thead>
           
           
            <tbody>
                @if (Model.Count() == 0) {
                    <tr>
                        <td>Your search returned no results.</td>
                    </tr>
                }

                @foreach (var oneEvent in Model) {
                    <tr>
                        <td>@Html.ActionLink(oneEvent.Title, "Details", "Event", new { id = oneEvent.EventId}, null)</td>
                        <td>@oneEvent.StartDateTime.ToShortDateString() - @oneEvent.StartDateTime.ToShortTimeString()</td>
                        <td>@oneEvent.City</td>
                        <td>@oneEvent.State</td>
                    </tr>
                }
            </tbody>
        </table>
</div>