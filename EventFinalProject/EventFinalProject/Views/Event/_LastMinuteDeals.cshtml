@model IEnumerable<EventFinalProject.Models.Event>

<div>
    <table id="searchTable" width="1200">
        <thead>
            <tr>
                <th>Event Title</th>
                <th>Start Date & Time</th>
                <th>City</th>
                <th>State</th>
            </tr>
        </thead>


        <tbody>
            @if (Model.Count() == 0) {
                <tr>
                    <td>Currently, there are no last minute deals.</td>
                </tr>
            }

            @foreach (var oneEvent in Model) {
                <tr>
                    <td width="25%">@Html.ActionLink(oneEvent.Title, "Details", "Event", new { id = oneEvent.EventId }, null)</td>
                    <td width="25%">@oneEvent.StartDateTime.ToShortDateString() - @oneEvent.StartDateTime.ToShortTimeString()</td>
                    <td width="20%">@oneEvent.City</td>
                    <td width="20%">@oneEvent.State</td>
                </tr>
            }
        </tbody>
    </table>
</div>
