<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div>
        <img src="~/Content/Images/logo.png" style="margin-left:8em;"  />
        <div class="container">
            <div style="color: darkgrey; font-weight: 16px;">
                @Html.ActionLink("Calli's MVC Music Shoppe", "Index", "Home", new { area = "" }, new { @class = "navStyle"})
            </div>

            <div>
                <ul style="list-style-type:none; text-align:right; display:block;">
                    <li>@Html.ActionLink("Home", "Index", "Home", new { area = "" }, new { @class = "navStyle"}) | @Html.ActionLink("Store", "Browse", "StoreFront", new { area = "" }, new { @class = "navStyle" })</li>
                </ul>
            </div>
        </div>
    </div>
    <hr />
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Calli's MVC Music Shoppe</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
